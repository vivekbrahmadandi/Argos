<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="different environment configurations">

	<test name="mac chrome">
		<parameter name="operating_system" value="mac" />
		<parameter name="browser" value="chrome" />
		<parameter name="browser_version" value="56.0" />
		<classes>
			<class name="integrationTests.cucumber.Cucumber_runner" />
		</classes>
	</test>

	<test name="linux firefox">
		<parameter name="operating_system" value="linux" />
		<parameter name="browser" value="firefox" />
		<parameter name="browser_version" value="60.0" />
		<classes>
			<class name="integrationTests.cucumber.Cucumber_runner" />
		</classes>
	</test>

	<test name="windows edge">
		<parameter name="operating_system" value="windows" />
		<parameter name="browser" value="edge" />
		<classes>
			<class name="integrationTests.cucumber.Cucumber_runner" />
		</classes>
	</test>

