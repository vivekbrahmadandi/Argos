						<artifactId>maven-failsafe-plugin</artifactId>
						<version>2.21.0</version>

						<configuration>
							<suiteXmlFiles>
								<suiteXmlFile>environment_configurations_to_test.xml</suiteXmlFile>
							</suiteXmlFiles>
							<systemPropertyVariables>
								<env.qa.url>${env.qa.url}</env.qa.url>
								<selenium.grid.enabled>${selenium.grid.enabled}</selenium.grid.enabled>
								<selenium.grid.hub>${selenium.grid.hub}</selenium.grid.hub>
								<selenium.tags>${selenium.tags}</selenium.tags>
							</systemPropertyVariables>
							<properties>
								<property>
									<name>listener</name>
									<value>integrationTests.cucumber.Listerners_and_hooks</value>
								</property>
							</properties>
							<forkCount>2</forkCount>
							<reuseForks>true</reuseForks>
						</configuration>
						<executions>
							<execution>
								<id>Selenium-integration-tests</id>
								<goals>
									<goal>integration-test</goal>
									<!--Use this goal to PASS/FAIL build based on results -->
									<goal>verify</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

